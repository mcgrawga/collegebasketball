<%content_for :title do%>Sign In<%end%>
<h1>Sign In</h1>

<br>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, {:autofocus => true,:class => 'form-control'}  %></div><br>

  <div class="form-group"><%= f.label :password %><br />
  <%= f.password_field :password, {:class => 'form-control'}%></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div><br>
  <% end -%>

  <div class="form-group"><%= f.submit "Sign in", class: "btn btn-primary" %></div><br>
<% end %>

<%= render "players/shared/links" %>
