<%content_for :title do%>Create a Pool and Sign Up<%end%>
<h1>Create a Pool and Sign Up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :pool_name %><br />
  <%= f.text_field :pool_name, {:autofocus => true,:class => 'form-control'} %></div><br>

  <div class="form-group"><%= f.label :first_name %><br />
  <%= f.text_field :first_name,:class => 'form-control' %></div><br>

  <div class="form-group"><%= f.label :last_name %><br />
  <%= f.text_field :last_name,:class => 'form-control' %></div><br>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email,:class => 'form-control' %></div><br>

  <div class="form-group"><%= f.label :password %><br />
  <%= f.password_field :password,:class => 'form-control' %></div><br>

  <div class="form-group"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation,:class => 'form-control' %></div><br>

  <div class="form-group"><%= f.hidden_field :is_admin, :value => "1" %></div>

  <div class="form-group"><%= f.submit "Sign up", class: "btn btn-primary" %></div><br>
<% end %>

